<?xml version="1.0" encoding="UTF-8"?>
<classpath>
    <!-- Entrada para o JDK. Aqui está configurado para Java 21. -->
    <classpathentry kind="con" path="org.eclipse.jdt.launching.JRE_CONTAINER/org.eclipse.jdt.internal.debug.ui.launcher.StandardVMType/JavaSE-21"/>

    <!-- Diretório de código-fonte -->
    <classpathentry kind="src" path="src/main/java"/>
    <classpathentry kind="src" path="src/main/resources"/>
    <classpathentry kind="src" path="src/test/java"/>

    <!-- Apache Tomcat - usado pelo Eclipse e Tomcat plugin -->
    <classpathentry kind="con" path="org.eclipse.jst.server.core.container/org.eclipse.jst.server.tomcat.runtimeTarget/Apache Tomcat v9.0">
        <attributes>
            <attribute name="owner.project.facets" value="jst.web"/>
        </attributes>
    </classpathentry>

    <!-- Facets para suporte a web (Servlets e JSP) -->
    <classpathentry kind="con" path="org.eclipse.jst.j2ee.internal.web.container"/>
    <classpathentry kind="con" path="org.eclipse.jst.j2ee.internal.module.container"/>

    <!-- Bibliotecas externas necessárias -->
    <classpathentry kind="lib" path="lib/dependencies/servlet-api.jar"/>
    <classpathentry kind="lib" path="lib/dependencies/jsp-api.jar"/>

    <!-- Diretório de saída de compilação -->
    <classpathentry kind="output" path="build/classes"/>
</classpath>
